<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/screenPadding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title">
        <item name="android:text">@string/title</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/grayFont</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iconImg">
        <item name="android:src">@drawable/icon</item>
    </style>

    <style name="text">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/text</item>
    </style>

    <style name="okBtn">
        <item name="android:text">@string/btn_ok</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/sky</item>
    </style>

    <style name="settingBtn">
        <item name="android:text">@string/btn_setting</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:gravity">center</item>
    </style>

</resources>